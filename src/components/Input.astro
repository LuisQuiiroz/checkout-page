---
interface Props {
  label: string;
  placeholder: string;
  icon:
    | "mail"
    | "phone"
    | "account"
    | "home"
    | "building"
    | "world"
    | "mailbox";
}

const { label, placeholder, icon } = Astro.props;
---

<div>
  <label for={label}>{label}</label>
  <img src={`/icons/${icon}.svg`} alt={label} />
  <input type="text" placeholder={placeholder} id={label} />
</div>
