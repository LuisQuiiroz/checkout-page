---
import { formatAmount } from "../utils/utils";

export interface Itemdata {
  name: string;
  originalPrice: number;
  price: number;
  amount: number;
  urlImg: string;
}

interface Props {
  item: Itemdata;
}
const { item } = Astro.props;

const { name, originalPrice, price, amount, urlImg } = item;
---

<div class="flex gap-4 pb-8">
  <div class="w-5/12 md:w-1/2">
    <img class="w-full rounded-xl" src={urlImg} alt={name} />
  </div>
  <div class="w-7/12 md:w-1/2 flex flex-col justify-between">
    <div>
      <p class="text-gray-4 text-xs lg:text-base font-bold">{name}</p>
      <div class="flex gap-4 pt-2 py-4">
        <p class="text-orange-1 text-sm lg:text-base font-bold">
          {formatAmount(price)}
        </p>
        <p class="text-gray-4 text-2xs lg:text-xs font-bold line-through">
          {formatAmount(originalPrice)}
        </p>
      </div>
    </div>
    <div
      class="flex justify-between items-center border rounded-xl border-gray-3 p-3 md:p-2 text-base max-w-[130px]"
    >
      <button
        class="text-gray-2 bg-gray-5 p-1 rounded w-4 h-4 flex items-center justify-center"
        id="decrement">-</button
      >
      <p class="font-bold" id="count">{amount}</p>
      <button
        class="text-gray-2 bg-gray-5 p-1 rounded w-4 h-4 flex items-center justify-center"
        id="increment">+</button
      >
    </div>
  </div>
</div>
