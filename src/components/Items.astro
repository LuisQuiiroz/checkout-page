---
import Item, { Itemdata } from "./Item.astro";
import { formatAmount } from "../utils/utils";

const data: Itemdata[] = [
  {
    name: "Vintage Backbag",
    originalPrice: 94.99,
    price: 54.99,
    amount: 1,
    urlImg: "/photo1.png",
  },
  {
    name: "Levi Shoes",
    originalPrice: 124.99,
    price: 74.99,
    amount: 1,
    urlImg: "/photo2.png",
  },
];

const shipping = 19;

const dataPrice = data.map((item) => item.price);
const totalPrice = dataPrice.reduce((acc, curr) => (acc += curr), 0);
const total = totalPrice + shipping;
---

<div class="p-6 lg:p-8 bg-gray-6 rounded-xl">
  {data.map((item) => <Item item={item} />)}
  <div class="pt-14 lg:pt-16 w-full">
    <div
      class="flex py-2 border-y border-gray-5 justify-between text-gray-1 text-sm lg:text-xl font-bold"
    >
      <p>Shipping</p>
      <p>{formatAmount(shipping)}</p>
    </div>
  </div>
  <div>
    <div
      class="flex pt-2 justify-between text-gray-1 text-sm lg:text-xl font-bold"
    >
      <p>Total</p>
      <p>{formatAmount(total)}</p>
    </div>
  </div>
</div>
